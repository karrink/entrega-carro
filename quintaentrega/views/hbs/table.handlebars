<br>

<div class="container">
  <div class="alert alert-primary text-center" role="alert">
    TABLA DE PRODUCTOS
  </div>
</div>


{{#if productos}}
  <table class="table container">
    <thead>
      <tr>
        <th scope="col">Nombre</th>
        <th scope="col">Precio</th>
        <th scope="col">Foto</th>
      </tr>
    </thead>
    <tbody>
    {{#each productos}}
      <tr>
        <td>{{this.title}}</td>
        <td>{{this.price}}</td>
        <td><img src='{{this.thumbnail}}' style="max-width: 50px; height: auto;"/></td>
      </tr>
    {{/each}}    
  </table>
{{else}}  
  <div class="alert alert-danger container" role="alert">
    No hay productos
  </div>
{{/if}}